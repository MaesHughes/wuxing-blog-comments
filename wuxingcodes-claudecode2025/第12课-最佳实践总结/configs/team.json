{
  "team_settings": {
    "shared_skills": [
      "code-review",
      "documentation",
      "unit-test",
      "security-scan",
      "performance-analysis",
      "refactoring"
    ],
    "plugins": [
      "eslint",
      "prettier",
      "git-hooks",
      "jenkins"
    ],
    "code_style": {
      "formatter": "prettier",
      "linter": "eslint",
      "style_guide": "company-standards",
      "line_length": 120,
      "quote_type": "single",
      "semi": true
    },
    "review_workflow": {
      "auto_review": true,
      "required_reviewers": 2,
      "approval_threshold": 2,
      "checklist": [
        "code_quality",
        "security_check",
        "performance_impact",
        "test_coverage",
        "documentation",
        "naming_conventions",
        "error_handling"
      ],
      "skip_patterns": [
        "package-lock.json",
        "node_modules",
        ".git/",
        "*.min.js"
      ]
    }
  },
  "collaboration": {
    "shared_workspace": true,
    "real_time_sync": true,
    "conflict_resolution": "merge_with_review",
    "code_suggestions": true
  },
  "notifications": {
    "review_requests": true,
    "mention_notifications": true,
    "build_status": true,
    "security_alerts": true,
    "performance_warnings": true
  },
  "workflow": {
    "pre_commit": [
      "format-check",
      "lint-check",
      "security-scan"
    ],
    "pre_push": [
      "unit-tests",
      "integration-tests"
    ],
    "post_merge": [
      "documentation-update",
      "deploy-staging"
    ],
    "on_failure": [
      "notify-team",
      "create-ticket"
    ]
  }
}