{
  "permissions": {
    "allowed_dirs": [
      "./src",
      "./tests",
      "./docs",
      "./config",
      "./scripts"
    ],
    "allowed_commands": [
      "git",
      "npm",
      "node",
      "npx",
      "pytest",
      "eslint",
      "prettier"
    ],
    "require_confirmation": false
  },
  "model": "sonnet",
  "sandbox": {
    "enabled": false
  },
  "context": {
    "framework": "Development",
    "debug": true
  },
  "performance": {
    "prompt_caching": true,
    "auto_compact": {
      "enabled": true,
      "threshold": 0.8,
      "interval": 300
    },
    "parallel_requests": true
  },
  "hooks": {
    "pre_tool_use": "node scripts/validate.js",
    "post_edit": "npm run lint -- --fix"
  }
}