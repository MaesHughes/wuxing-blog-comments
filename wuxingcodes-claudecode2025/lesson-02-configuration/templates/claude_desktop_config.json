{
  "version": "0.1.0",
  "providers": {
    "anthropic": {
      "api_key": "${ANTHROPIC_API_KEY}",
      "model": "claude-3-5-sonnet-20241022",
      "max_tokens": 8192,
      "temperature": 0.7
    }
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/tmp/mcp-servers-filesystem"
      ]
    }
  },
  "contextDirectory": "${CONTEXT_DIRECTORY:-}",
  "logging": {
    "level": "info",
    "file": "${HOME}/.config/claude-desktop/logs/claude-desktop.log",
    "maxFileSize": "10MB",
    "maxFiles": 5
  },
  "performance": {
    "maxConcurrentRequests": 5,
    "requestTimeout": 30000,
    "cacheEnabled": true,
    "cacheSize": 1000
  },
  "features": {
    "autoSave": true,
    "autoSaveInterval": 60000,
    "theme": "system",
    "fontSize": 14,
    "lineWrap": true
  },
  "security": {
    "allowLocalhost": true,
    "allowedHosts": [
      "localhost",
      "127.0.0.1",
      "0.0.0.0"
    ],
    "enableSandbox": false
  },
  "extensions": {
    "enabled": true,
    "directory": "${HOME}/.config/claude-desktop/extensions",
    "autoUpdate": true
  }
}