# ClaudeCode 环境变量配置模板
# 复制此文件为 .env 并填入您的实际值

# Anthropic Claude API 密钥
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API 密钥（可选）
OPENAI_API_KEY=your-openai-api-key-here

# Google AI API 密钥（可选）
GOOGLE_AI_API_KEY=your-google-api-key-here

# 上下文目录（可选，默认为当前目录）
CONTEXT_DIRECTORY=/path/to/your/context

# 数据库连接字符串（如果使用数据库 MCP 服务器）
DATABASE_URL=postgresql://user:password@localhost:5432/claudecode

# 日志级别（可选，默认为 info）
# 可选值：debug, info, warn, error
LOG_LEVEL=info

# 最大并发请求数（可选，默认为 5）
MAX_CONCURRENT_REQUESTS=5

# 请求超时时间，毫秒（可选，默认为 30000）
REQUEST_TIMEOUT=30000

# 是否启用缓存（可选，默认为 true）
CACHE_ENABLED=true

# 缓存大小（可选，默认为 1000）
CACHE_SIZE=1000

# 主题设置（可选，默认为 system）
# 可选值：system, light, dark
THEME=system

# 字体大小（可选，默认为 14）
FONT_SIZE=14

# 是否自动保存（可选，默认为 true）
AUTO_SAVE=true

# 自动保存间隔，毫秒（可选，默认为 60000）
AUTO_SAVE_INTERVAL=60000

# 扩展目录（可选）
EXTENSIONS_DIRECTORY=/path/to/extensions

# 配置文件路径（可选）
CONFIG_PATH=/path/to/claude_desktop_config.json

# 允许的主机（可选，逗号分隔）
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# 是否启用沙盒（可选，默认为 false）
ENABLE_SANDBOX=false

# MCP 服务器配置路径（可选）
MCP_SERVERS_CONFIG=/path/to/mcp-servers.json

# 是否启用实验性功能（可选）
ENABLE_EXPERIMENTAL=false

# Git 仓库路径（可选）
GIT_REPOSITORY_PATH=/path/to/repo

# 工作目录（可选）
WORKING_DIRECTORY=/path/to/workspace

# 备份目录（可选）
BACKUP_DIRECTORY=/path/to/backups

# 调试模式（可选，默认为 false）
DEBUG=false

# 性能监控（可选，默认为 false）
ENABLE_METRICS=false

# 语言设置（可选，默认为 en）
LANGUAGE=zh-CN